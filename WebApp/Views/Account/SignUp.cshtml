@model RegisterAccountViewModel;

@{
	ViewData["Title"] = "Register new account";
}


<section class="registration-form m-5">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-12 col-md-8 form-col">
                <form method="post" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row d-flex justify-content-center">
                        <h5>Please Register Your new Account</h5>
                        <div class="col-12 col-md-6">
                            <label asp-for="FirstName"></label>
                            <input asp-for="FirstName" />
                            <small><span asp-validation-for="FirstName" class="text-danger"></span></small>
                        </div>
                        <div class="col-12 col-md-6">
                            <label asp-for="LastName"></label>
                            <input asp-for="LastName" />
                            <small><span asp-validation-for="LastName" class="text-danger"></span></small>
                        </div>
                        <div class="col-12">
                            <label asp-for="StreetName"></label>
                            <input asp-for="StreetName" />
                            <small><span asp-validation-for="StreetName" class="text-danger"></span></small>
                        </div>
                        <div class="col-12 col-md-6">
                            <label asp-for="PostalCode"></label>
                            <input asp-for="PostalCode" />
                            <small><span asp-validation-for="PostalCode" class="text-danger"></span></small>
                        </div>
                        <div class="col-12 col-md-6">
                            <label asp-for="City"></label>
                            <input asp-for="City" />
                            <small><span asp-validation-for="City" class="text-danger"></span></small>
                        </div>
                        <div class="col-12 col-md-6">
                            <label asp-for="PhoneNumber"></label>
                            <input asp-for="PhoneNumber" />
                            <small><span asp-validation-for="PhoneNumber" class="text-danger"></span></small>
                        </div>
                        <div class="col-12 col-md-6">
                            <label asp-for="Company"></label>
                            <input asp-for="Company" />
                        </div>
                        <div class="col-12">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" />
                            <small><span asp-validation-for="Email" class="text-danger"></span></small>
                        </div>
                        <div class="col-12">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" />
                            <small><span asp-validation-for="Password" class="text-danger"></span></small>
                        </div>
                        <div class="col-12">
                            <label asp-for="ConfirmPassword"></label>
                            <input asp-for="ConfirmPassword" />
                            <small><span asp-validation-for="ConfirmPassword" class="text-danger"></span></small>
                        </div>
                        <div class="col-12">
                            <label asp-for="ImageUpload"></label>
                            <input asp-for="ImageUpload" />
                            <small><span asp-validation-for="ImageUpload" class="text-danger"></span></small>
                        </div>
                        <div class="check-boxs">
                            <input type="checkbox"
                                   id="save-info"
                                   name="save-info"
                                   value="" />
                            <label for="save-info">
                                I have read and accepts the terms and
                                agreements
                            </label>
                        </div>
                        <div class="form-button">
                            <button type="Submit" id="submit">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>