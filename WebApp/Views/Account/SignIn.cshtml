@model LoginAccountViewModel;

@{
	ViewData["Title"] = "Login to your account";
}

<section class="login">
	<div class="container">
		<div class="row d-flex justify-content-center">
			<div class="col-12 col-md-8 col-lg-6 form-col">
				<form method="post" novalidate>
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<h5>Please Login to Your Account</h5>
					<div class="col-12">
						<label asp-for="Email"></label>
						<span id="create-account">
							<a asp-controller="Account" asp-action="SignUp">Don't have an Account yet?</a>
						</span>
						<input asp-for="Email" class="input-form" />
						<small><span asp-validation-for="Email" class="text-danger"></span></small>
					</div>
					<div class="col-12">
						<label asp-for="Password"></label>
						<span id="forgot-password">
							<a href="#">Forgot Your Password?</a>
						</span>
						<input asp-for="Password" class="input-form" />
						<small><span asp-validation-for="Password" class="text-danger"></span></small>
						<div id="password-message">
							<small>
								<span class="invalid" id="everything">You must provide a valid password,</span>
								<span class="invalid" id="length">at least 8 characters long</span>
								<span class="invalid" id="letter">containing at least one lowercase</span>
								<span class="invalid" id="capital">and one upper case letter</span>
								<span class="invalid" id="number">, 1 number</span>
								<span class="invalid" id="special">, and 1 special character.</span>
							</small>
						</div>
					</div>
					<div class="check-boxs">
						<input type="checkbox"
							   id="save-info"
							   name="save-info" />
						<label for="save-info">Please keep me logged in</label>
					</div>
					<div class="form-button">
						<button id="submit">Logga in</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</section>

<script>loginValidate()</script>