@model ShowcaseViewModel
@{
}


@if (Model != null)
{
	<section class="showcase">
		<div class="container">
			<div class="content">
				<div class="ingress">@Model?.Ingress</div>
				<div class="title">@Model?.Title</div>
				<button class="btn-theme"><a asp-controller="product" asp-action="details" asp-route-name="@Model.Title">Shop now</a></button>
			</div>
			<div class="content-image">
				<img src="@Model?.ImageUrl" alt="@Model?.Title" />
			</div>
		</div>
	</section>
}
